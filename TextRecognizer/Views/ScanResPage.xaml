<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TextRecognizer.Views.ScanResPage"
             BackgroundColor="#1e1e1e"
             BackgroundImageSource="background2.jpg">

    <StackLayout Padding="10" Spacing="10">
        <Label Text="Saved OCR Results" FontSize="28" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center" />

        <CollectionView x:Name="ResultsCollectionView" SelectionMode="Single" SelectionChanged="OnSelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" BackgroundColor="#424242" CornerRadius="10" WidthRequest="350" HeightRequest="100">
                        <Label Text="{Binding DisplayText}" TextColor="White" FontSize="14" LineBreakMode="TailTruncation" MaxLines="3"/>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>

</ContentPage>